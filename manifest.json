{
  "manifest_version": 3,
  "name": "Web SDK plugin",
  "version": "1.0",
  "description": "Add the chat widget to websites",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/web-sdk.js",
        "scripts/settings.js",
        "scripts/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "On and off the extension"
  }
}
